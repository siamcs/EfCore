@model EfCore.Models.Product
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-10">
        <h4>Edit Product</h4>
        <form asp-controller="Product" asp-action="Edit" method="post" enctype="multipart/form-data">
            @Html.AntiForgeryToken()
            <input asp-for="ProductId" type="hidden"/>
            <div>
                <label>Title</label>
                <input asp-for="Title"/>
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label>Image</label>
                <img src="~/Images/@Model.UrlImage" width="80" height="80" class="change_edit" />
                <input type="file" asp-for="UrlImage"/>
                <span asp-validation-for="UrlImage"></span>
            </div>
            <div class="form-group">
                <label>Price</label>
                <input asp-for="Price"/>
                <span asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <label>Category</label>
                <select asp-for="CategoryId" asp-items="@ViewBag.Categories" class="form-control">
                    <option value="">Select Category</option>
                </select>
                <span asp-validation-for="Title"></span>
            </div>
            <div>
                <input type="submit" name="submit" style="width:auto" value="Add Product" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
